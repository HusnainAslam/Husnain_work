
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_simple.cshtml";
}
@Scripts.Render("~/Content/template/js/JavaScript1.js")
<body>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form class="form-horizontal" action="@Url.Action("SignUpPost")" method="POST">
                    <fieldset>
                        <legend class="">Register</legend>
                        <div class="control-group">
                            <label class="control-label" for="username">Name</label>
                            <div class="controls">
                                <input type="text" id="username" name="Name" placeholder="" class="form-control input-md" required>
                                <p class="help-block">Your good Name</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="email">E-mail</label>
                            <div class="controls">
                                <input type="email" id="email" name="Email" placeholder="" class="form-control input-md">
                                <p class="help-block">Please provide your E-mail</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="password">Password</label>
                            <div class="controls">
                                <input type="password" id="pass1" name="Password" placeholder=""  required  class="form-control input-md">
                                <p class="help-block">Password should be at least 6 characters</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="password_confirm">Password (Confirm)</label>
                            <div class="controls">
                                <input type="password" id="pass2" onkeyup="checkPass(); return false;" name="password_confirm" placeholder="" class="form-control input-md">
                                <p class="help-block">Please confirm password</p>
                                <span id="confirmMessage" class="confirmMessage"></span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="Address">Address</label>
                            <div class="controls">
                                <input type="text" id="Address" name="Address" placeholder="" class="form-control input-md">
                                <p class="help-block">Please Enter Address</p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="contact">Contact</label>
                            <div class="controls">
                                <input type="text" id="contact" name="Contact" pattern="03[0-9]{2}-(?!1234567)(?!1111111)(?!7654321)[0-9]{7}" placeholder="03xx-xxxxxxx" class="form-control input-md">
                                <p class="help-block">Please Enter Contact Number</p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="CNIC">CNIC</label>
                            <div class="controls">
                                <input type="text" id="cnic" name="CNIC" placeholder="" maxlength="15" class="form-control input-md">
                                <p class="help-block">Please Enter CNIC</p>
                            </div>
                        </div>
                        <div>
                            <label>Sign up As</label>&nbsp;<input type="radio" name="signup" value="Customer" required /> Customer &nbsp;
                            <input type="radio" name="signup" value="Tailor" required /> Tailor  &nbsp;
                        </div>
                        <br />
                        <div class="control-group">
                            <!-- Button -->
                            <div class="controls">
                                <button class="btn btn-success">Next</button>
                            </div>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>
</body>

