<!DOCTYPE html>
<html>
<head>

    <title>@Page.Title</title>
    <link href="@Url.Content("~/Content/template/")css/bootstrap.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/template/")css/Footer.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/template/")css/style.css" rel="stylesheet" />
    <script src="@Url.Content("~/Content/template/")js/bootstrap.js"></script>
    <script src="@Url.Content("~/Content/template/")js/jquery-1.11.1.min.js"></script>
    <script src="@Url.Content("~/Content/template/")js/JavaScript1.js"></script>
</head>
<body>
    <div class="navbar navbar-default ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo navbar-brand">
                    <a href="/Home/Index">STITCH FAB</a>
                </div>
            </div>
            <div class="right-div">
                <ul class="list-inline">
                    <li><a href="/Home/Logout"><input type="button" class="btn btn-default" value="Log Out"></a></li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Tailor", "Customer")">Tailor</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>@Html.ActionLink("View Cart", "ViewCart", "Customer")</li>
                    <li>@Html.ActionLink("Personal Info", "CustomerInfo", "Customer")</li>
                </ul>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="copyright">
                        © 2017, StitchFab, All rights reserved

                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="design">
                        <a href="#">Franchisee </a> |  <a target="_blank" href="#">Web Design & Development by Squad</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
