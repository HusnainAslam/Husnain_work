<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <link href="@Url.Content("~/Content/template/")css/bootstrap.css" rel="stylesheet" />
        <link href="@Url.Content("~/Content/template/")css/login.css" rel="stylesheet" />
        <link href="@Url.Content("~/Content/template/")css/footer.css" rel="stylesheet" />       
        <link href="@Url.Content("~/Content/template/")css/font-awesome.css" rel="stylesheet" />
        <script src="@Url.Content("~/Content/template/")js/bootstrap.js"></script>
        <script src="@Url.Content("~/Content/template/")js/jquery-1.11.1.min.js"></script>
        

    </head>
<body>
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Stitch Fab", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Tailor", "Tailor", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    
    @RenderBody()
    <br>
    <br />
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="copyright">
                        © 2017, StitchFab, All rights reserved

                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="design">
                        <a href="#">Franchisee </a> |  <a target="_blank" href="#">Web Design & Development by Squad</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


</body>

</html>
